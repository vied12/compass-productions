<!DOCTYPE html>
html lang="en"
	head
		title | Portfolio
		> link type="text/css" rel="stylesheet" href="{{url_for('static', filename='css/jquery.jscrollpane.css')}}" media="all"	
		> link type="text/css" rel="stylesheet" href="{{url_for('static', filename='css/base.css') }}" media="all"
		> link type="text/css" rel="stylesheet" href="{{url_for('static', filename='css/admin.css')}}" media="all"
		script type="text/javascript" src="{{url_for('static', filename='js/jquery172.js')}}"                 | {# #}

	body.use-base
		{% block content %}
		.logo | {##}
		.menu
			a.gotosite href="/#page=news" target="_blank" | Go to the site
			a.logout href="logout" | Logout
		.News.widget data-widget=portfolio_admin.News
			fieldset.addNews
				legend | Add a news
				form name=addNews method=post action=#
					input type=text name=title_en placeholder=Title  | {##}
					textarea name=content_en placeholder="Your message here !" | {##} 
					input type=text name=title_fr placeholder=Titre  | {##}
					textarea name=content_fr placeholder="Ton message ici!" | {##} 
					input type=submit value=Publish data-action=add | {##}
			ul
				li.newsEdit.template
					form name=addNews method=post action=#
						input.out.title_en name=title_en placeholder=Title  | {##}
						textarea.out.content_en name=content_en placeholder="Your message here !" | {##}
						input.out.title_fr name=title_fr placeholder=Titre  | {##}
						textarea.out.content_fr name=content_fr placeholder="Ton message ici !" | {##}
						input type=submit value=Publish data-action=edit | {##}
						input type=submit value=Cancel data-action=cancel | {##}
				li.news.template
					.actions
						button data-action=edit   | Edit
						button data-action=remove | Remove
					.out.date    | {##}
					English:
					h2.out.title_en   | {##}
					p.out.content_en | {##}
					Fran√ßais:
					h2.out.title_fr   | {##}
					p.out.content_fr | {##}

		{% endblock %}

		script type="text/javascript" src="{{url_for('static', filename='js/hashchange.js')  }}"              | {# #}
		script type="text/javascript" src="{{url_for('static', filename='js/widget.js')   }}"                 | {# #}
		script type="text/javascript" src="{{url_for('static', filename='js/formatting.js')  }}"              | {# #}
		script type="text/javascript" src="{{url_for('static', filename='js/admin.js')  }}"                   | {# #}